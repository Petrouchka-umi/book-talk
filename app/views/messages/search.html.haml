.contents
  .search_box
    = form_with url: search_messages_path, method: :get, class: "search_form", local: true do |f|
      = f.text_field :title_key, placeholder: "本のタイトルを検索する", class: "search_input"
      = f.submit '検索', class: "search_btn"
  .contents_row
    - @messages.each do |message|
      = render partial: "message", locals: { message: message}